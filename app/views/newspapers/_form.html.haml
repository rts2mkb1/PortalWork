= form_for @newspaper do |f|
  - if @newspaper.errors.any?
    #error_explanation
      %h2= "#{pluralize(@newspaper.errors.count, "error")} prohibited this newspaper from being saved:"
      %ul
        - @newspaper.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :year
    = f.text_field :year
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :relese_date
    = f.datetime_select :relese_date
  .actions
    = f.submit 'Save'
