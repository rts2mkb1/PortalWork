- model_class = News
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @news.date
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @news.title
%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @news.text

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), news_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_news_path(@news), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), news_path(@news), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
